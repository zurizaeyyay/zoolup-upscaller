{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start FastAPI Server",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "call \"${env:USERPROFILE}\\Tooling\\miniconda3\\Scripts\\activate.bat\" upscaller && python -m uvicorn backend.api_server:app --host 127.0.0.1 --port 8000 --reload --use-colors"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "isBackground": true
        },
        {
            "label": "Start Next.js + Electron Dev",
            "type": "shell",
            "command": "pnpm",
            "args": ["run", "electron-dev"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "problemMatcher": [],
        },
        {
            "label": "Start Full Application",
            "dependsOrder": "parallel",
            "dependsOn": [
                "Start FastAPI Server",
                "Start Next.js + Electron Dev"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            }
        },
        {
            "label": "Build Next.js App",
            "type": "shell",
            "command": "pnpm",
            "args": ["run", "build"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "problemMatcher": []
        }
    ]
}
