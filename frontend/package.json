{
    "name": "zoolup-upscaler",
    "version": "0.1.1",
    "productName": "Zoolup Image Upscaler",
    "description": "Upscale Images with AI",
    "author": "Zuri Ash Zaey",
    "private": true,
    "main": "electron/electron.js",
    "homepage": "./",
    "scripts": {
        "dev": "next dev --turbopack",
        "dev:webpack": "next dev",
        "build": "next build",
        "lint": "next lint",
        "clear": "rimraf out && rimraf dist",
        "electron": "cross-env NODE_ENV=development electron .",
        "electron-dev": "concurrently \"pnpm run dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
        "electron-pack": "pnpm run build && electron-builder",
        "electron-pack-mac": "pnpm clear && pnpm run build && electron-builder --mac --publish=never",
        "electron-pack-win": "pnpm clear && pnpm run build && electron-builder --win --publish=never",
        "electron-pack-linux": "pnpm clear && pnpm run build && electron-builder --linux --publish=never"
    },
    "dependencies": {
        "@radix-ui/react-checkbox": "^1.3.2",
        "@radix-ui/react-dialog": "^1.1.14",
        "@radix-ui/react-label": "^2.1.7",
        "@radix-ui/react-progress": "^1.1.7",
        "@radix-ui/react-select": "^2.2.5",
        "@radix-ui/react-slider": "^1.3.5",
        "@radix-ui/react-slot": "^1.2.3",
        "@radix-ui/react-toast": "^1.2.14",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "dotenv": "^17.2.2",
        "gsap": "^3.13.0",
        "lucide-react": "^0.525.0",
        "next": "15.4.2",
        "react": "19.1.0",
        "react-compare-slider": "^3.1.0",
        "react-dom": "19.1.0",
        "react-tooltip": "^5.29.1",
        "tailwind-merge": "^3.3.1",
        "tree-kill": "^1.2.2"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3",
        "@tailwindcss/postcss": "^4",
        "@types/node": "^20",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "@typescript-eslint/parser": "^8.38.0",
        "concurrently": "^9.2.0",
        "cross-env": "^7.0.3",
        "electron": "^37.2.3",
        "electron-builder": "^26.0.12",
        "eslint": "^9",
        "eslint-config-next": "15.4.2",
        "prettier": "^3.6.2",
        "prettier-eslint": "^16.4.2",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "rimraf": "^6.0.1",
        "tailwindcss": "^4",
        "typescript": "^5",
        "wait-on": "^8.0.3"
    },
    "build": {
        "appId": "com.zoolup.upscaller",
        "productName": "Zoolup Image Upscaler",
        "directories": {
            "output": "dist",
            "buildResources": "build"
        },
        "files": [
            "out/**/*",
            "electron/electron.js",
            "electron/preload.js",
            "public/**/*",
            ".env",
            ".env.production",
            "node_modules/**/*",
            "!node_modules/.cache/**/*",
            "!**/.DS_Store"
        ],
        "extraResources": [
            {
                "from": "resources/backends/",
                "to": "backends",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "mac": {
            "category": "public.app-category.graphics-design",
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                },
                {
                    "target": "zip",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ],
            "icon": "public/icon.icns",
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "entitlements": "build/entitlements.mac.plist",
            "entitlementsInherit": "build/entitlements.mac.plist",
            "artifactName": "${productName}-${version}-${arch}.${ext}",
            "minimumSystemVersion": "10.15.0"
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "zip",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "public/icon.ico",
            "artifactName": "${productName}-${version}-${arch}.${ext}"
        },
        "linux": {
            "target": [
                {
                    "target": "AppImage",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "tar.gz",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "public/icon.png",
            "category": "Graphics",
            "artifactName": "${productName}-${version}-${arch}.${ext}"
        },
        "dmg": {
            "title": "${productName} ${version}",
            "icon": "public/icon.icns",
            "window": {
                "width": 540,
                "height": 380
            },
            "contents": [
                {
                    "x": 410,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 130,
                    "y": 150,
                    "type": "file"
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        }
    }
}
